{
    "compilerOptions": {
      "lib": ["esnext"],
      "typeRoots": ["./node_modules/@types", "./lib/typings"],
      "module": "ES2020",
      "moduleResolution": "node",
      "target": "es2019",
      "outDir": "build",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUncheckedIndexedAccess": true,
      "noEmitOnError": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "incremental": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "lib/**/*.ts", "node_modules/cypress"],
    "exclude": [".git", "build", "node_modules", ".cdk.out"]
  }